QLineEdit {
	background-color: @background_color;
	border: 1px solid @border_color;
	border-radius: @border_radius;
	padding: @padding;
	color: @text_color;
	selection-background-color: @background_selection_color;
}

QLineEdit:focus {
	border: 2px solid @focus_border_color;
	outline: none;
}

QLineEdit:hover {
    border: 1px solid @hover_border_color;
}


QLineEdit:disabled {
    background-color: @background_disabled;
    color: @text_color_disabled; 
}
